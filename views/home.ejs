<%- include("header.ejs") %>
<div class="Container">
  <h1>IP Address Tracker</h1>
  <form action="/" method="POST" class="col-lg-5">
    <input type="text" class="form-control" placeholder="Search for any IP address"
      aria-label="Enter a IP Address." name="ipEntered"><button class="Btn btn btn-dark" type="submit"><i
        class="fas fa-chevron-right"></i></button>
  </form>
  <div class="infoContainer col-lg-11 col-md-11 col-11">
    <div class="infoItem ">
      <div class="content">
        <p>IP Address</p>
        <h4><%=ipInfo["ip"]%></h4>
      </div>
    </div>
    <div class="infoItem ">
      <div class="content">
        <p>Location</p>
        <h4><%=ipInfo["location"]%></h4>
      </div>
    </div>
    <div class="infoItem ">
      <div class="content">
        <p>Timezone</p>
        <h4>UTC <span><%=ipInfo["timezone"]%></span></h4>
      </div>
    </div>
    <div class="infoItemLast">
      <p>ISP</p>
      <h4><%=ipInfo["isp"]%></h4>
    </div>
  </div>
</div>
<div id="map"></div>
<p class="lat cordinates">lat: <%=ipInfo["cordinates"].lat%></p>
<p class="lng cordinates">lng: <%=ipInfo["cordinates"].lng%></p>
<script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"
integrity="sha512-XQoYMqMTK8LvdxXYG3nZ448hOEQiglfqkJs1NOQV44cWnUrBc8PkAOcXy20w0vlaXaVUearIOBhiXZ5V3ynxwA=="
crossorigin=""></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
  lat = parseFloat($(".lat").html().slice(5));
  lng = parseFloat($(".lng").html().slice(5));
